
<%= simple_form_for(@booking) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">

  <% if @booking.property_id.blank? %>
    <%= f.input :property_id, input_html: { value: params['property'] }, as: :hidden%>
  <% else %>
    <%= f.input :property_id %>
    <br>
  <% end %>

    <br>
    <%= f.input :guest_name %>
    <br>
    <div class="row">
      <div class="col-6">
        <%= f.input :platform, as: :select, collection: ['Airbnb', 'Other'] %>
      </div>
      <br>
      <div class="col-6">
        <%= f.input :confirmation_code %>
      </div>
    </div>
    <br>
    <%= f.input :check_in %>
    <br>
    <%= f.input :check_out %>
    <br>
    <% if @booking.nights.blank? == false %>
      <%= f.input :nights %>
      <br>
    <% end %>
    <%#= f.input :nights %>
    <%= f.input :payout %>
    <br>
    <%= f.input :notes, as: :text, input_html: {rows: 2} %>
  </div>
<br>
  <div class="form-actions">
    <%= f.button :submit, 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
